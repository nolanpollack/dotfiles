#!/bin/bash

# Change to the script's directory
cd "$(dirname "$0")"

packages=(
  bat
  btop
  git
  nvim
  tmux
)

# WSL
# if [[ -v $WSL_DISTRO_NAME ]]; then
#   packages+=()
# fi
#

# Mac 
if [[ "$OSTYPE" == "darwin"* ]]; then
  packages+=(
    ghostty
  )
fi

# Stow all packages
for pkg in "${packages[@]}"; do
  echo "Stowing $pkg"
  stow "$@" -R "$pkg" || echo "Warning: Failed to stow $pkg"
  echo
done
