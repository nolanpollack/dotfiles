[include]
    path = ~/dotfiles/catppuccin.gitconfig
[user]
	email = nolanfpollack@gmail.com
	name = Nolan Pollack
[init]
	defaultBranch = main
[core]
	pager = delta
	excludesfile = /home/nolanpollack/.gitignore_global
[interactive]
	diffFilter = delta --color-only
[diff]
	colorMoved = default
[delta]
    diff-so-fancy = true
	navigate = true
	line-numbers = true
	side-by-side = true
    features = catppuccin-mocha
[color]
	ui = auto
[alias]
	root = rev-parse --show-toplevel
    recent = !~/dotfiles/git-scripts/git_recent
    branch-files = !~/dotfiles/git-scripts/git_branch_files
    superprune = !"git fetch --prune && git branch -vv | rg ': gone]' | awk '{print $1}' | xargs -r git branch -D"


[rerere]
	enabled = true
[log]
	date = format:%Y-%m-%d %I:%M:%S %p
[index]
	skipHash = false
